{
  "openapi": "3.0.2",
  "info": {
    "title": "Basic Shareholders Info",
    "description": "Data Product for basic Shareholders info",
    "version": "1.0.0"
  },
  "paths": {
    "/Company/Shareholders": {
      "post": {
        "summary": "Company/Shareholders Data Product",
        "description": "Information about the shareholders of the company",
        "operationId": "requestCompanyShareHoldersData",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ShareholdersInfoRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ShareholdersInfoResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPValidationError": {
        "title": "HTTPValidationError",
        "type": "object",
        "properties": {
          "detail": {
            "title": "Detail",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "OwnedShares": {
        "title": "OwnedShares",
        "required": ["seriesName", "quantity"],
        "type": "object",
        "properties": {
          "seriesName": {
            "title": "Series name",
            "type": "string",
            "description": "Name of the share series",
            "example": "A"
          },
          "quantity": {
            "title": "Number of shares",
            "type": "integer",
            "description": "Number of shares held by the owner",
            "example": 100
          }
        }
      },
      "Owners": {
        "title": "Owners",
        "required": ["name", "shares"],
        "type": "object",
        "properties": {
          "name": {
            "title": "Name of the shareholder",
            "type": "string",
            "description": "Name of the shareholder",
            "example": "Matti Meikäläinen | Oy Company Ltd"
          },
          "shares": {
            "title": "Owned Shares",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OwnedShares"
            },
            "description": "List of owned shares"
          }
        }
      },
      "ShareSeries": {
        "title": "ShareSeries",
        "required": ["seriesName", "votesPerShare", "totalShares"],
        "type": "object",
        "properties": {
          "seriesName": {
            "title": "Series Name",
            "type": "string",
            "description": "Classification of the share",
            "example": "A"
          },
          "votesPerShare": {
            "title": "Votes per share",
            "type": "integer",
            "description": "Number of votes per share in the share series",
            "example": 1
          },
          "totalShares": {
            "title": "Total shares",
            "type": "integer",
            "description": "Total number of shares in the share series",
            "example": 1000
          }
        }
      },
      "ShareholdersInfoRequest": {
        "title": "ShareholdersInfoRequest",
        "required": ["companyId"],
        "type": "object",
        "properties": {
          "companyId": {
            "title": "Company Id",
            "type": "string",
            "description": "The ID of the company, only supports Finnish business ID's",
            "example": "2464491-9"
          }
        }
      },
      "ShareholdersInfoResponse": {
        "title": "ShareholdersInfoResponse",
        "required": ["shareSeries", "owners"],
        "type": "object",
        "properties": {
          "shareSeries": {
            "title": "Share series",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ShareSeries"
            }
          },
          "owners": {
            "title": "Owners",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Owners"
            }
          }
        }
      },
      "ValidationError": {
        "title": "ValidationError",
        "required": ["loc", "msg", "type"],
        "type": "object",
        "properties": {
          "loc": {
            "title": "Location",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "msg": {
            "title": "Message",
            "type": "string"
          },
          "type": {
            "title": "Error Type",
            "type": "string"
          }
        }
      }
    }
  }
}
